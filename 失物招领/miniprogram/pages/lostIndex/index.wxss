.body {
  overflow: hidden;
}

.informations {
  float: left;
  width: 48%;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  background-color: rgb(248, 247, 247);
}

.informations image {
  border-radius-top: 30rpx;
  width: 100%;
  height: 50vw;
}

.informations label {
  margin-top: 10rpx;
  padding-left: 10rpx;
  font-size: 32rpx;
  color: rgb(66, 66, 66);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.informations text {
  margin-top: 5rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 30rpx;
  color: rgb(80, 79, 79);
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

