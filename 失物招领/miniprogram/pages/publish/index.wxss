
.information {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 985rpx;
}
.information form {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding-left: 40rpx;
  position: relative;
  font-size: 30rpx;
}
.detail,.time,.address,.name,.id,.academy {
  display: flex;
  flex-direction: row;
  width: 94%;
  height: 85rpx;
  align-items: center;
  border-bottom: 1px solid rgb(238, 238, 238)
}
.checkbox {
  display: flex;
  flex-direction: row;
  width: 94%;
  height: 85rpx;
  align-items: center;
}
.checkbox,.goods,.DIU{
  display: flex;
  flex-direction: row;
  width: 94%;
  height: 20vw;
  align-items: center;
  margin-bottom: 50rpx
}
.checkbox label,.goods label,.DIU label{
  flex: 4 !important;
} 
.check ,.goods input,.checkDIU{
  flex: 6 !important;
  display: flex !important;
  flex-direction: row  !important;
  justify-content: space-between !important;
  align-items: center;
  flex-wrap: wrap !important;
  height: 100% !important;
}
.check_in {
  margin-right: 20rpx !important;
  height: 50% !important;
  display: flex;
  align-items: center
}
.other {
  height: 50vw;
}
.other text,.checkbox text,.goods text,.DIU text {
  margin-left: 15rpx;
  color: red
}
.other textarea{
  width:90%;
  border: 1px solid rgb(238, 238, 238);
  border-radius: 20rpx;
  padding-left: 25rpx !important;
  margin-top: 15rpx;
  height: 200rpx !important;
  margin-bottom: 50rpx;
  font-size: 25rpx
}
.information label {
  flex: 5;
}
.information input {
  flex: 5;
  font-size: 25rpx;
  padding-left: 150rpx;
  text-align: center;
  height: 100%;
}
