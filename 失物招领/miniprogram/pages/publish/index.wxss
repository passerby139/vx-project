  border: none !important;
  background-color: #99ccff !important;
  width: 60% !important;
  margin-left: 115rpx !important;
  margin-top: 25rpx !important;
  border-radius: 20rpx !important;
  color: #fff !important;
  font-size: 35rpx !important;
